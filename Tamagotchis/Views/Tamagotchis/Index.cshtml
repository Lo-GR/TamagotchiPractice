@using Tamagotchis.Models;

<div class="container">
  <h2>Home</h2>
  @if (Model.Count == 0)
  {
    <p>There are no Tamagotchis yet!</p>
  }
  <ul>
    @foreach (Tamagotchi tamagotchi in Model)
    {
      <li><a href="/tamagotchis/@tamagotchi.Id">@tamagotchi.Name</a>Status: @tamagotchi.AliveOrDead() </li>
    }
  </ul>
  <a href="/tamagotchis/new">Add a Tamagotchi</a>
  <a href="/tamagotchis"> Refresh Tamagotchis</a>
  <form action="/tamagotchis/passtime" method="post">
    <button type="submit">Pass Time</button>
  </form>
</div>
