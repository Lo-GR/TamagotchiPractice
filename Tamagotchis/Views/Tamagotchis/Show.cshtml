@using Tamagotchis.Models;

<h1>Tamagotchi: </h1>

<h2>@Model.Name</h2>
<ul>
  <li>Full Belly: @Model.Food</li>
  <li>Entertained: @Model.Attention</li>
  <li>Rested: @Model.Rest</li>
</ul>

<a href="/tamagotchis/new">Add another Tamagotchi</a>
<a href="/tamagotchis">View all Tamagotchis</a>
  <form action="/tamagotchis/foodgive/@Model.Id" method="post">
    <button type="submit">Gib Food</button>
  </form>
    <form action="/tamagotchis/attentionprovide/@Model.Id" method="post">
    <button type="submit">Play now</button>
  </form>
    <form action="/tamagotchis/sleepnow/@Model.Id" method="post">
    <button type="submit">Go Sleep</button>
  </form>